Options -MultiViews
RewriteEngine On
RewriteBase /

# Ensure index.html is default document
DirectoryIndex index.html

# Send 404s to index.html (SPA fallback alternative)
ErrorDocument 404 /index.html

# Don't rewrite existing files or directories
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Prevent rewriting the index.html to itself
RewriteRule ^index\.html$ - [L]

# Fallback to index.html for all other routes (SPA routing)
RewriteRule . /index.html [L]
# Vite/React SPA fallback
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Ignora arquivos/diretorios existentes
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Redireciona todas as outras requisições para index.html
  RewriteRule ^ index.html [L]
</IfModule>
